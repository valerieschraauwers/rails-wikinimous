<%= form_for(@article) do |f| %>
<div class="container">
  <div class="form-group form-inline">
    <%= f.label :title%>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group form-inline">
    <%= f.label :content %>
    <%= f.text_field :content, class: 'form-control' %>
  </div>

  <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>
